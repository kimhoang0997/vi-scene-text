            "console": "integratedTerminal",
            "args": []
        },
        {
            "name": "Data Augmentation Tool with Output Folder Parameter",
            "type": "debugpy",
            "request": "launch",
            "program": "tools/createdataset/data-augmentation-tool.py",
            "console": "integratedTerminal",
            "args": ["-o", "dataset/data-augmentation"]
        },
        {
            "name": "Data Augmentation Tool with Number of Files Parameter",
            "type": "debugpy",
            "request": "launch",
            "program": "tools/createdataset/data-augmentation-tool.py",
            "console": "integratedTerminal",
            "args": ["-n", "5000", "-r"]
        },
        {
            "name": "Data Augmentation Tool with Config Parameter",
            "type": "debugpy",
            "request": "launch",
            "program": "tools/createdataset/data-augmentation-tool.py",
            "console": "integratedTerminal",
            "args": ["-c", "configs/data-augmentation-tool-config.json"]
        },
        {
            "name": "Data Augmentation Tool with Image Type Parameter",
            "type": "debugpy",
            "request": "launch",
            "program": "tools/createdataset/data-augmentation-tool.py",
            "console": "integratedTerminal",
            "args": ["-t", ".png"]
        },
        {
            "name": "Data Augmentation Tool without Augmentation Parameter",
            "type": "debugpy",
            "request": "launch",
            "program": "tools/createdataset/data-augmentation-tool.py",
