        },
        {
            "name": "Data Augmentation Tool with All Parameter",
            "type": "debugpy",
            "request": "launch",
            "program": "tools/createdataset/data-augmentation-tool.py",
            "console": "integratedTerminal",
            "args": [
                "-c", "configs/data-augmentation-tool.json",
                "-n", "10000",
                "-t", ".png",
                "-o", "output",
